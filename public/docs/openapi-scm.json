{
    "openapi": "3.0.3",
    "servers": [
        {
            "url": "http://172.33.0.4:8080",
            "description": "development"
        }
    ],
    "info": {
        "title": "API shopping cart manager",
        "version": "1.0"
    },
    "paths": {
        "/carts": {
            "post": {
                "tags": [
                    "Cart"
                ],
                "summary": "Create new Cart",
                "description": "Create new cart associated to session or user",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "userId": {
                                        "type": "integer",
                                        "description": "Internal user id",
                                        "example": 123
                                    },
                                    "sessionId": {
                                        "type": "string",
                                        "description": "session id",
                                        "example": ""
                                    }
                                },
                                "required": ["sessionId"]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Cart created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "example": "501c4b5b-00f9-49ef-a649-969caf8e95c0"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found cart",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "type": "array",
                                            "example": [
                                                "Cart with id # not found"
                                            ]
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Unknown error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "type": "array",
                                            "example": [
                                                "Unknown error"
                                            ]
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/carts/{id}": {
            "get": {
                "tags": [
                    "Cart"
                ],
                "summary": "Get Cart data",
                "description": "Get cart data by public uuid",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Cart public uuid",
                        "required": true,
                        "example": "501c4b5b-00f9-49ef-a649-969caf8e95c0",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "example": "501c4b5b-00f9-49ef-a649-969caf8e95c0"
                                        },
                                        "code": {
                                            "type": "string",
                                            "example": "CA-20250707004126-432"
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "new"
                                        },
                                        "email": {
                                            "type": "string",
                                            "example": "user@email.com"
                                        },
                                        "phone": {
                                            "type": "string",
                                            "example": "666444333"
                                        },
                                        "shipping_address": {
                                            "type": "object",
                                            "description": "Shipping address associated with the cart",
                                            "properties": {
                                                "street": {
                                                    "type": "string",
                                                    "example": "Mayor, 154"
                                                },
                                                "city": {
                                                    "type": "string",
                                                    "example": "Gijón"
                                                },
                                                "state": {
                                                    "type": "string",
                                                    "example": "Asturias"
                                                },
                                                "postal_code": {
                                                    "type": "string",
                                                    "example": "33206"
                                                },
                                                "country": {
                                                    "type": "string",
                                                    "example": "España"
                                                }
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found cart",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "type": "array",
                                            "example": [
                                                "Cart with id # not found"
                                            ]
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Unknown error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "type": "array",
                                            "example": [
                                                "Unknown error"
                                            ]
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/carts/{id}/items": {
            "post": {
                "tags": [
                    "Cart"
                ],
                "summary": "Add item to cart",
                "description": "Create cart item associated with cart",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Cart public uuid",
                        "required": true,
                        "example": "501c4b5b-00f9-49ef-a649-969caf8e95c0",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "price": {
                                        "type": "number",
                                        "description": "Price in €",
                                        "example": 7.5
                                    },
                                    "quantity": {
                                        "type": "number",
                                        "description": "Number of items > 0",
                                        "example": 5
                                    },
                                    "product_id": {
                                        "type": "integer",
                                        "description": "Internal product ID",
                                        "example": 66
                                    },
                                    "name": {
                                        "type": "string",
                                        "description": "Product description",
                                        "example": "Sunglasses"
                                    },
                                    "color": {
                                        "type": "string",
                                        "description": "Color of the product",
                                        "example": "Black"
                                    },
                                    "size": {
                                        "type": "string",
                                        "description": "Size description",
                                        "example": "XS"
                                    }
                                },
                                "required": ["price", "quantity", "product_id"]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Cart item added successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "description": "Cart item public uuid",
                                            "example": "2d8e6960-7b3c-4aee-b90c-54cbc377938c"
                                        },
                                        "cart_id": {
                                            "type": "string",
                                            "description": "Cart public uuid",
                                            "example": "b11ca198-5ceb-45c1-a6c9-d0bff815d6c2"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found cart",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "type": "array",
                                            "example": [
                                                "Cart with id # not found"
                                            ]
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Unknown error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "type": "array",
                                            "example": [
                                                "Unknown error"
                                            ]
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/carts/{id}/items/{itemId}": {
            "delete": {
                "tags": [
                    "Cart"
                ],
                "summary": "Delete item from cart",
                "description": "Delete cart item",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Cart public uuid",
                        "required": true,
                        "example": "501c4b5b-00f9-49ef-a649-969caf8e95c0",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "itemId",
                        "in": "path",
                        "description": "Cart item public uuid",
                        "required": true,
                        "example": "501c4b5b-00f9-49ef-a649-969caf8e95c0",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Cart item removed successfully"
                    },
                    "404": {
                        "description": "Not found cart",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "type": "array",
                                            "example": [
                                                "Cart with id # not found"
                                            ]
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Unknown error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "type": "array",
                                            "example": [
                                                "Unknown error"
                                            ]
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/carts/{id}/checkout": {
            "put": {
                "tags": [
                    "Cart"
                ],
                "summary": "Checkout Cart",
                "description": "Finish checkout process",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Cart public uuid",
                        "required": true,
                        "example": "501c4b5b-00f9-49ef-a649-969caf8e95c0",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "checkoutId": {
                                        "type": "string",
                                        "description": "Checkout id, from payment process",
                                        "example": "chk_eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9"
                                    }
                                },
                                "required": ["checkoutId"]
                            }
                        }
                    }
                },
                "responses": {
                    "204": {
                        "description": "Cart checkout successfully"
                    },
                    "404": {
                        "description": "Not found cart",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "type": "array",
                                            "example": [
                                                "Cart with id # not found"
                                            ]
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Unknown error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "type": "array",
                                            "example": [
                                                "Unknown error"
                                            ]
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Cart",
            "description": "Cart management actions (create, update, get, add product, remove product, checkout)"
        },
        {
            "name": "Product",
            "description": "Product management actions"
        },
        {
            "name": "Order",
            "description": "Order management actions"
        }
    ]
}
